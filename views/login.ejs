<!doctype html>
<html>
<head>
    <title>Roulette Sim</title>
    <link href="https://fonts.googleapis.com/css?family=Baloo+2:400,600,700|Sen:400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
</head>
<body>
  <header>
    <h1>Roulette Sim</h1>
  </header>
  <div class="container logIn">
    <div class="col-sm-6 col-sm-offset-3">
      <h1>Login</h1>
      <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
        <% } %>
        <!-- LOGIN FORM -->
        <form action="/login" method="post">
          <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" name="email">
          </div>
          <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password">
          </div>
          <button type="submit" id="logInButton" class="btn btn-warning btn-lg">Login</button>
          <p>Or go <a href="/">home</a></p>
        </form>
      </div>
    </div>
  </body>
</html>
